<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="8dp"
        android:paddingTop="8dp"
        android:paddingRight="8dp"
        android:paddingBottom="8dp"
        tools:context=".MainActivity">

        <!--First question-->

        <TextView
            android:id="@+id/question_1_text_view"
            style="@style/QuestionStyle"
            android:text="@string/first_question" />

            <CheckBox
                android:id="@+id/answer_1_1_check_box"
                style="@style/CheckBoxStyle"
                android:text="@string/first_question_answer_1" />

            <CheckBox
                android:id="@+id/answer_1_2_check_box"
                style="@style/CheckBoxStyle"
                android:text="@string/first_question_answer_2" />

            <CheckBox
                android:id="@+id/answer_1_3_check_box"
                style="@style/CheckBoxStyle"
                android:text="@string/first_question_answer_3" />

            <CheckBox
                android:id="@+id/answer_1_4_check_box"
                style="@style/CheckBoxStyle"
                android:text="@string/first_question_answer_4" />

        <!--Second question-->

        <TextView
            android:id="@+id/question_2_text_view"
            style="@style/QuestionStyle"
            android:text="@string/second_question" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/second_question_answer_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onRadioButtonClicked"
                android:text="@string/second_question_answer_1" />

            <RadioButton
                android:id="@+id/second_question_answer_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onRadioButtonClicked"
                android:text="@string/second_question_answer_2" />

            <RadioButton
                android:id="@+id/second_question_answer_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onRadioButtonClicked"
                android:text="@string/second_question_answer_3" />

            <RadioButton
                android:id="@+id/second_question_answer_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onRadioButtonClicked"
                android:text="@string/second_question_answer_4" />
        </RadioGroup>

        <!--Third question-->

        <TextView
            android:id="@+id/question_3_text_view"
            style="@style/QuestionStyle"
            android:text="@string/third_question" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/third_question_answer_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onRadioButtonClicked"
                android:text="@string/third_question_answer_1" />

            <RadioButton
                android:id="@+id/third_question_answer_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onRadioButtonClicked"
                android:text="@string/third_question_answer_2" />

            <RadioButton
                android:id="@+id/third_question_answer_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onRadioButtonClicked"
                android:text="@string/third_question_answer_3" />

            <RadioButton
                android:id="@+id/third_question_answer_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onRadioButtonClicked"
                android:text="@string/third_question_answer_4" />
        </RadioGroup>

        <!--Fourth question-->


        <TextView
            android:id="@+id/question_4_text_view"
            style="@style/QuestionStyle"
            android:text="@string/fourth_question" />

        <EditText
            android:id="@+id/question_4_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorAccent"
            android:hint="@string/starts_with_q"
            android:inputType="text" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16sp"
            android:onClick="submitQuiz"
            android:text="@string/submit_quiz"
            android:textAllCaps="true"
            android:textSize="16sp" />

    </LinearLayout>
</ScrollView>